  <div class="row">
    <div class="col-md-12">

      <div class="list-view list-view-pf">
        {{!-- iterates through each persona --}}
        {{#each personas}}

          <div data-link="details.html" class="list-group-item">
            <a href="/persona/details" class="list-group-item-link"></a>
            <div class="list-view-pf-checkbox">
              <input type="checkbox">
            </div>
            <div class="list-view-pf-actions">
              <button onclick="location.href='/persona/{{_id}}/details'" class="btn btn-default">View Details</button>
              <div class="dropdown pull-right dropdown-kebab-pf">
                <button class="btn btn-link dropdown-toggle" type="button" id="dropdownKebabRight" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  <span class="fa fa-ellipsis-v"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownKebabRight">
                  <li>
                    <a href="/persona/{{_id}}/edit">Edit</a>
                  </li>
                  <li data-toggle="modal" data-target="#{{_id}}">
                    <a href="#">Delete</a>
                  </li>
                  <!--
                  <li>
                    <a href="#">Export data</a>
                  </li>
                  <li>
                    <a href="#">Link to another persona</a>
                  </li>
                -->
                </ul>
              </div>
              <!-- Modal -->
              <div class="modal fade" id="{{_id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Close">
                        <span class="pficon pficon-close"></span>
                      </button>
                      <h4 class="modal-title" id="myModalLabel">Modal Title</h4>
                    </div>
                    <div class="modal-body">
                      <p>Do you want to delete this persona?</p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary" onclick="location.href='/persona/{{_id}}/delete'">Delete</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="list-view-pf-main-info">
              <div class="list-view-pf-left">
                <img class="img--icon img--icon--sm" src={{photo}} alt="https://robohash.org/{{name}}?bgset=any" />
              </div>
              <div class="list-view-pf-body">
                <div class="list-view-pf-description">
                  <div class="list-group-item-heading">
                    <a href="/persona/{{_id}}/details" class="list-group-item-link">{{name}}</a>
                  </div>
                  <div class="list-group-item-text">
                    {{ jobTitle }}
                  </div>
                </div>

              </div>
            </div>
          </div>
          <!-- list-group-item -->

        {{/each}}

